{
  "expo": {
    "name": "ArtisanFlow",
    "slug": "artisanflow-3rgvrambzo0tk8d1ddx2",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 24,
            "compileSdkVersion": 36,
            "targetSdkVersion": 36,
            "ndkVersion": "24.0.8215888"
