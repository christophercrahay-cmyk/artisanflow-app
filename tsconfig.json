{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/layout/**/*.ts",
    "components/layout/**/*.tsx",
    "components/home/**/*.ts",
    "components/home/**/*.tsx",
    "components/share/**/*.ts",
    "components/share/**/*.tsx",
    "components/ui/Button.tsx",
    "components/ui/Card.tsx",
    "components/ui/Badge.tsx",
    "components/ui/Input.tsx",
    "components/ui/Textarea.tsx",
    "components/ui/Spinner.tsx",
    "components/ui/AnimatedSection.tsx",
    "components/ui/GradientBlur.tsx",
    "lib/**/*.ts",
    "types/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "components/**/*.js",
    "components/**/*.tsx",
    "!components/layout/**",
    "!components/home/**",
    "!components/share/**",
    "!components/ui/Button.tsx",
    "!components/ui/Card.tsx",
    "!components/ui/Badge.tsx",
    "!components/ui/Input.tsx",
    "!components/ui/Textarea.tsx",
    "!components/ui/Spinner.tsx",
    "!components/ui/AnimatedSection.tsx",
    "!components/ui/GradientBlur.tsx",
    "screens",
    "navigation",
    "services",
    "store",
    "hooks",
    "utils",
    "theme",
    "contexts",
    "config",
    "validation",
    "android",
    "ios",
    "web"
  ]
}
