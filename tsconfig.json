{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.{ts,tsx}",
    "components/layout/**/*.{ts,tsx}",
    "components/home/**/*.{ts,tsx}",
    "components/share/**/*.{ts,tsx}",
    "components/ui/**/*.{ts,tsx}",
    "lib/**/*.{ts,tsx}",
    "types/**/*.{ts,tsx}",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "build",
    "screens",
    "navigation",
    "services",
    "store",
    "hooks",
    "utils",
    "theme",
    "contexts",
    "config",
    "validation",
    "android",
    "ios",
    "web",
    "android_backup",
    ".expo",
    "coverage",
    "__tests__"
  ],
  "extends": "expo/tsconfig.base"
}
